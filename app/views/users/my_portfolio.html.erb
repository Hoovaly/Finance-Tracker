<h1 class="text-light">My Portfolio</h1>

<div class= 'search-area'>
  	<h3 class="text-light"> Search Stocks</h3>
  	<%= form_tag '#', method: :get do%>
  		<div class="form-group row">
				<div class="col-sm-8">
	  			<%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
				</div>
				<div class="col-sm-4">
	  			<%= button_tag type: :submit, class: "btn btn-secondary btn-lg" do %>
						<%= 'Search' %>
			  	<% end %>
				</div> 
			</div>
  	<%end%>
</div>