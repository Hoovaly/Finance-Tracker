<h1 class="text-light">My Friends</h1>

<div class= 'search-area'>
  	<h3 class="text-light"> Search Friends</h3>
  	<%= form_tag search_friends_path, remote: true, method: :get do%>
  		<div class="form-group row">
				<div class="col-sm-8">
	  			<%= text_field_tag :friend, params[:friend], placeholder: "Name or email", autofocus: true, class: "form-control form-control-lg" %>
				</div>
				<div class="col-sm-4">
	  			<%= button_tag type: :submit, class: "btn btn-secondary btn-lg" do %>
						<%= 'Search' %>
			  	<% end %>
				</div> 
			</div>
  	<%end%>
</div>

<div id="results">

</div>

<% if !@friends.empty? %>
  <%= render 'friends/list' %>
<% end %>